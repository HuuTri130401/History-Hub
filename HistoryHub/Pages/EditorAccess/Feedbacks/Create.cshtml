@page
@model HistoryHub.Pages.EditorAccess.Feedbacks.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Feedback</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Feedback.UserId" class="control-label"></label>
                <select asp-for="Feedback.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.TimelineId" class="control-label"></label>
                <select asp-for="Feedback.TimelineId" class ="form-control" asp-items="ViewBag.TimelineId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.QuizId" class="control-label"></label>
                <select asp-for="Feedback.QuizId" class ="form-control" asp-items="ViewBag.QuizId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.Comment" class="control-label"></label>
                <input asp-for="Feedback.Comment" class="form-control" />
                <span asp-validation-for="Feedback.Comment" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Feedback.Status" /> @Html.DisplayNameFor(model => model.Feedback.Status)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.CreateDate" class="control-label"></label>
                <input asp-for="Feedback.CreateDate" class="form-control" />
                <span asp-validation-for="Feedback.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
