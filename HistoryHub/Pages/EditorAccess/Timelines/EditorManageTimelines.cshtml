                    <i class="bi bi-layout-text-window-reverse"></i><span>Periods</span>
                </a>
            </li><!-- End Tables Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="/EditorAccess/Figures/EditorManageFigures">
                    <i class="bi bi-person"></i><span>Figures</span>
                </a>
            </li><!-- End Charts Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="/EditorAccess/Quizzes/EditorManageQuizzes">
                    <i class="bx bx-pencil"></i><span>Quizzes</span>
                </a>
            </li><!-- End Icons Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="/EditorAccess/Questions/EditorManageQuestions">
                    <i class="bi bi-question-circle"></i><span>Questions</span>
                </a>
            </li><!-- End Icons Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="/EditorAccess/Favorites/EditorManageFavorites">
                    <i class="bx bxs-star-half"></i><span>Favorites</span>
                </a>
            </li><!-- End Icons Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="/EditorAccess/Feedbacks/EditorManageFeedbacks">
                    <i class="bx bx-repost"></i><span>Feedbacks</span>
                </a>
            </li><!-- End Icons Nav -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="/account/login">
                    <i class="bi bi-box-arrow-in-left"></i>
                    <span>Logout</span>
                </a>
            </li><!-- End Login Page Nav -->
        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Timelines</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/EditorAccess/Timelines/Create"><i class="ri-folder-add-line"></i> Create New</a></li>
                    <li class="breadcrumb-item active">Timelines</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section dashboard">
            <div class="row">
                <!-- Top Selling -->
                <div class="col-12">
                    <div class="card top-selling overflow-auto">

                        <div class="card-body pb-0">
                            <h5 class="card-title">Resent Timelines</h5>
                            <p>
                                <a style="background-color: forestgreen;
                                        color: #ffffff;
                                        padding: 10px 20px;
                                        border-radius: 3px;
                                        text-decoration: none;" asp-page="Create">Create Timeline</a>
                            </p>

                            <table class="table table-borderless">
                                <thead>
                                    <tr>
                                       <th scope="col">@Html.DisplayNameFor(model => model.Timeline[0].Title)</th>
                                        <th scope="col">Create Date</th>
                                        <th scope="col">Number of favourite</th>
                                        <th scope="col">Created by</th>
                                        <th scope="col">@Html.DisplayNameFor(model => model.Timeline[0].Status)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Timeline) {
                                    <tr>
                                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.Title)</td>
                                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.CreateDate)</td>
                                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.NumberOfFavorite)</td>
                                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.CreatedByNavigation.Email)</td>
                                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.Status)</td>
                                            <td>
                                                <a asp-page="./Edit" asp-route-id="@item.TimelineId"><i class="ri-edit-2-fill"></i></a> |
                                                <a asp-page="./Details" asp-route-id="@item.TimelineId"><i class="ri-file-paper-line"></i></a> |
                                                <a asp-page="./Delete" asp-route-id="@item.TimelineId"><i class="ri-delete-bin-line"></i></a>
                                            </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div><!-- End Top Selling -->
            </div>
        </section>

    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>NiceAdmin</span></strong>.
            Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
        </div>
    </footer><!-- End Footer -->

