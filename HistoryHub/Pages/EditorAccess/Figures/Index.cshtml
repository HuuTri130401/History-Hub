@page
@model HistoryHub.Pages.EditorAccess.Figures.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Figure[0].FigureName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Figure[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Figure[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Figure[0].CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Figure[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Figure[0].CreateByNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Figure[0].Period)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Figure) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FigureName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateByNavigation.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Period.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FigureId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.FigureId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.FigureId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
