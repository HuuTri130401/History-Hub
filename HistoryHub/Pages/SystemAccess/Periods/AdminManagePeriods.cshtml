    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Periods</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="./Create">Create New</a></li>
                    <li class="breadcrumb-item active">Period</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section dashboard">
            <div class="row">
                <!-- Top Selling -->
                <div class="col-12">
                    <div class="card top-selling overflow-auto">

                        <div class="card-body pb-0">
                            <h5 class="card-title">Resent Periods</h5>
                            <p>
                                <a style="background-color: forestgreen;
                                        color: #ffffff;
                                        padding: 10px 20px;
                                        border-radius: 3px;
                                        text-decoration: none;" asp-page="Create">Create Period</a>
                            </p>
                            <table class="table table-borderless">
                                <thead>
                                    <tr>
                                        <th scope="col">Period Name</th>
                                        <th scope="col">Create Date</th>
                                        <th scope="col">Create By</th>
                                        <th scope="col">Timelines</th>
                                        <th scope="col">Status</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model.Period)
                                {
                                    <tbody>
                                        <tr>
                                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.PeriodName)</td>
                                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.CreateDate)</td>
                                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.CreateByNavigation.Email)</td>
                                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.Timeline.Title)</td>
                                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.Status)</td>
                                            <td>
                                                <a asp-page="./Edit" asp-route-id="@item.PeriodId"><i class="ri-edit-2-fill"></i></a> |
                                                <a asp-page="./Details" asp-route-id="@item.PeriodId"><i class="ri-file-paper-line"></i></a> |
                                                <a asp-page="./Delete" asp-route-id="@item.PeriodId"><i class="ri-delete-bin-line"></i></a>
                                            </td>

                                        </tr>


                                    </tbody>
                                }
                            </table>

                        </div>

                    </div>
                </div><!-- End Top Selling -->
            </div>
        </section>

    </main><!-- End #main -->
