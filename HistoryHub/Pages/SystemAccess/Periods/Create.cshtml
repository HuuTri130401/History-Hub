<main id="main" class="main">

<h4>Period</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Period.PeriodName" class="control-label">Period Name</label>
                <input asp-for="Period.PeriodName" class="form-control" />
                <span asp-validation-for="Period.PeriodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Period.Description" class="control-label">Description</label>
                <input asp-for="Period.Description" class="form-control" />
                <span asp-validation-for="Period.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Period.TimelineId" class="control-label">Timeline</label>
                <select asp-for="Period.TimelineId" class ="form-control" asp-items="ViewBag.TimelineId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Period.CreateDate" class="control-label"></label>
                <input asp-for="Period.CreateDate" class="form-control" />
                <span asp-validation-for="Period.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Period.CreateBy" class="control-label">Created By</label>
                <select asp-for="Period.CreateBy" class ="form-control" asp-items="ViewBag.CreateBy"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Period.Status" /> @Html.DisplayNameFor(model => model.Period.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-page="AdminManagePeriods"><i class="bi bi-arrow-left-square-fill"></i> Back to List</a>
</div>
</main>

