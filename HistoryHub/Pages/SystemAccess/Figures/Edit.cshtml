@page
@model HistoryHub.Pages.SystemAccess.Figures.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Figure</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Figure.FigureId" />
            <div class="form-group">
                <label asp-for="Figure.FigureName" class="control-label"></label>
                <input asp-for="Figure.FigureName" class="form-control" />
                <span asp-validation-for="Figure.FigureName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Figure.Description" class="control-label"></label>
                <input asp-for="Figure.Description" class="form-control" />
                <span asp-validation-for="Figure.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Figure.PeriodId" class="control-label"></label>
                <select asp-for="Figure.PeriodId" class="form-control" asp-items="ViewBag.PeriodId"></select>
                <span asp-validation-for="Figure.PeriodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Figure.Image" class="control-label"></label>
                <input asp-for="Figure.Image" class="form-control" />
                <span asp-validation-for="Figure.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Figure.CreateBy" class="control-label"></label>
                <select asp-for="Figure.CreateBy" class="form-control" asp-items="ViewBag.CreateBy"></select>
                <span asp-validation-for="Figure.CreateBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Figure.CreateDate" class="control-label"></label>
                <input asp-for="Figure.CreateDate" class="form-control" />
                <span asp-validation-for="Figure.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Figure.Status" /> @Html.DisplayNameFor(model => model.Figure.Status)
                </label>
            </div>
            <div class="form-group">
                <div class="form-group" style="margin-top: 15px">
                    <input type="submit" value="Save" style="background-color: #00ace6;
                    color: #ffffff;
                    padding: 5px 20px;
                    border-radius: 3px;
                    text-decoration: none;" />
                </div>
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 15px">
    <a asp-page="./AdminManageFigures" style="background-color: forestgreen;
       color: #ffffff;
       padding: 10px 20px;
       border-radius: 3px;
       text-decoration: none;">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
